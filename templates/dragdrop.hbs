<div class="component__inner dragdrop__inner">
  {{> component this}} 

  <div class="dragdrop__main {{_position}}">

    <div class="dragdrop__items">
    {{#each _items}}
      <div id="dragdrop__item-container" style="width: {{../_itemDimensions._width}};" >
        <div id="drag-item-{{@index}}" 
          class="dragdrop__item js-drag-item {{_classes}}" 
          data-draggable="{{_placeholder}}"
          draggable="true"
          style="width: {{../_itemDimensions._width}}; height: {{../_itemDimensions._height}}" 
          >
          {{#if text}}
            <div class="dragdrop__item-title">{{{text}}}</div>
          {{/if}} 
          {{#if _graphic}}<div style="background-image: url({{_graphic._url}});" class="dragdrop__item-image" draggable="false"></div>{{/if}} 
        </div>
      </div>
      
    {{/each}}
    </div> 

    <div class="dragdrop__placeholders {{_placeholder_position}}">
    {{#each _placeholders}}
      <div class="dragdrop__placeholder" >
        {{#if title}}
          <div class="dragdrop__placeholder-title">{{title}}</div>
        {{/if}} 
        <div id="dragdrop__placeholder-{{@index}}" 
              data-placeholder="{{@index}}"
              class="dragdrop__placeholder-items js-drag-target" 
              style="min-height: {{../_itemDimensions._height}}"
              ></div>
      </div>
    {{/each}}
    </div> 

  </div>

  <div class="dragdrop__buttons button">
    <button class="dragdrop__btn btn js-dragdrop-check-click"  aria-label="{{{checkText}}}">
      {{{checkText}}}
    </button>
    <button class="dragdrop__btn btn js-dragdrop-showfeedback-click is-hidden"  aria-label="{{{feedbackText}}}">
      {{{feedbackText}}}
    </button>
  </div>

  <div id="dragdrop__feedback" class="dragdrop__feedback">
    {{#if _feedback.title}}
      <h2 class="dragdrop__placeholder-title">{{_feedback.title}}</h2>
    {{/if}} 
    <div class="dragdrop__feedback-correct feedback" >{{{_feedback.correct}}}</div>
    <div class="dragdrop__feedback-incorrect feedback" >{{{_feedback.incorrect}}}</div>
  </div>

</div>
