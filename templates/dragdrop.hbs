<div class="component__inner dragdrop__inner">
  {{> component this}} 

  <div class="dragdrop__main {{_position}}">

    <div class="dragdrop__items">
    {{#each _items}}
      <div id="dragdrop__item" style="width: {{_dimensions._width}};" >
        <div id="dragdrop__item-{{@index}}" 
          class="dragdrop__item js-drag-item {{_classes}}" 
          draggable="true"
          {{!-- style="width: {{_dimensions._width}}; height: {{_dimensions._height}}"  --}}
          >
          {{#if text}}
            <div class="dragdrop__item-title">{{text}}</div>
          {{/if}} 
          {{#if _graphic}}<img src="{{_graphic._url}}" class="dragdrop__item-image" draggable="false" />{{/if}} 
        </div>
      </div>
      
    {{/each}}
    </div> 

    <div class="dragdrop__placeholders {{_placeholder_position}}">
    {{#each _placeholders}}
      <div class="dragdrop__placeholder" >
        {{#if title}}
          <div class="dragdrop__placeholder-title">{{title}}</div>
        {{/if}} 
        <div id="dragdrop__placeholder-{{@index}}" class="dragdrop__placeholder-items js-drag-target" ></div>
      </div>
    {{/each}}
    </div> 

  </div>

</div>
